@page "{id:int?}"
@model ScriptureJournal.Pages.JournalEntries.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center" style="margin-bottom: 30px">Journal Entry Details</h1>
<hr />
<div class="row">
    <div class="offset-3 col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JournalEntry.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JournalEntry.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JournalEntry.Book)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JournalEntry.Book)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JournalEntry.Note)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JournalEntry.Note)
            </dd>
        </dl>
        <div>
            <a asp-page="./Index" class="btn btn-primary">Back</a>
            <a asp-page="./Edit" asp-route-id="@Model.JournalEntry.ID" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>

