@page "{id:int?}"
@model ScriptureJournal.Pages.JournalEntries.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center" style="margin-bottom: 30px">Delete Journal Entry</h1>
<h4 class="text-center" style="margin-bottom: 30px">Are you sure you want to delete this entry?</h4>
<hr />
<div class="row">
    <div class="offset-3 col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JournalEntry.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JournalEntry.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JournalEntry.Book)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JournalEntry.Book)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JournalEntry.Note)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JournalEntry.Note)
            </dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="JournalEntry.ID" />
            <a asp-page="Index" class="btn btn-primary">Back</a>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
